@inherits LayoutComponentBase

<MudThemeProvider Theme="CustomTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<div class="page">
    <TopNavbar />
    <main>
        @Body
    </main>
</div>

@code {
    MudTheme CustomTheme = new MudTheme()
        {
            Typography = new Typography()
            {
                Default = new Default()
                {
                    FontFamily = new[] { "Public Sans", "Roboto", "Arial", "sans-serif" }
                },
                H2 = new H2()
                {
                    FontSize = "4rem",
                    FontWeight = 700
                },
                Subtitle1 = new Subtitle1()
                {
                    FontSize = "1.125rem"
                }
            }
        };
}